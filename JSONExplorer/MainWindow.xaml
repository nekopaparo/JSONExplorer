                                <Trigger Property="Button.IsMouseOver" Value="True">
                                    <Setter TargetName="MouseOver" Property="Fill" Value="#FF88D170" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
