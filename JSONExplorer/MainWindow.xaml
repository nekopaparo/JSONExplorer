<Window x:Class="JSONExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONExplorer"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource ViewModel}}"
        Title="MainWindow"
        Width="500" MinWidth="250"
        Height="400" MinHeight="300"
        ResizeMode="CanResizeWithGrip"
        Background="{x:Null}"
        WindowStyle="None" 
        WindowState="Normal"
        AllowsTransparency="True">

    <Grid x:Name="Main"  Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- 選單 -->
        <Grid Grid.Row ="1" Background="#CC2E3851" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <!-- 選單 -->
            <Menu Grid.Column="0" Background="#CC2E3851" >
                <Menu.Resources>
                    <Style TargetType="MenuItem">
                        <Setter Property="Background" Value="{x:Null}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                </Menu.Resources>
                <MenuItem Header="檔案(F)">
                    <MenuItem.Resources>
                        <Style TargetType="Label">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontSize" Value="12"/>
                        </Style>
                    </MenuItem.Resources>
                    <Label x:Name="NewFile">新增(N)</Label>
                    <Label x:Name="OpenFile">開啟(O)</Label>
                    <Label x:Name="SaveAsFile">另存新檔</Label>
                </MenuItem>
            </Menu>
            <!-- 其他功能 -->
            <WrapPanel Grid.Row="0" Grid.Column="1" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                <WrapPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="2.5, 0"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Width" Value="25"/>
                    </Style>

                </WrapPanel.Resources>
                <!-- 開啟資料夾 -->
