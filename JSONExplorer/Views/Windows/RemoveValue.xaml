<Window x:Class="JSONExplorer.Views.Windows.RemoveValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONExplorer.Views.Windows"
        mc:Ignorable="d"
        Title="RemoveValue" Height="100" Width="100"
        Background="{x:Null}"
        WindowStyle="None" 
        WindowState="Normal"
        AllowsTransparency="True">
    <StackPanel>
        <Button x:Name="RemoveBtn">
            <Button.Template>
                <ControlTemplate>
                    <TextBlock x:Name="FocusedStyle" Background="#7F1C4A73" Foreground="White" FontSize="12"  Text="刪除" TextAlignment="Center"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver" Value="True">
                            <Setter TargetName="FocusedStyle" Property="Background" Value="#CCFF0000" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</Window>
